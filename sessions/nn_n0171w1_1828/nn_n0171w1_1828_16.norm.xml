<choice><orig>unſrer</orig><reg resp="#cab">unserer</reg></choice> <choice><orig>Sterninſel</orig><reg resp="#cab">Sterninsel</reg></choice> 800 <choice><orig>Syrius-Meilen</orig><reg resp="#cab">Sirius-Meilen</reg></choice> lang <choice><orig>iſt</orig><reg resp="#cab">ist</reg></choice>;<lb/>
